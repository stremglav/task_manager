<%= render :template => "users/edit", :locals => {:title => "Add new user"} %>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Control</th>
        </tr>
    </thead>
    <tbody>
    <% @users.each_with_index do |u, i| %>
    <tr>
        <td><%= i+1 %></td>
        <td><%= u.full_name %></td>
        <td><%= u.email %></td>
        <td><%= u.role %></td>
        <td><%= link_to "Edit", edit_user_path(u) %>
        <%= link_to "Delete", user_path(u), :confirm => "Are you sure?", :method=>:delete %></td>
    </tr>
    <% end %>
    </tbody>
</table>
