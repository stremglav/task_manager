<h1>Edit Story</h1>

<%= form_for @story do |f| %>
    <% if @story.errors.any? %>
        <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
            <% for message in @story.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :user %>
        <%= f.select :user_id, options_for_select(@users) %>
    </div>

    <div class="field">
        <%= f.label :text %>
        <%= f.text_area :text %>
    </div>

    <div class="field">
        <%= f.label :state %>
        <% if @story.state_events.length > 0 %>
            <%= f.select :state, options_for_select(@story.state_events) %>
        <% else %>
            Accepted
        <% end %>
    </div>

    <div class="actions"><%= f.submit %></div>
<% end %>
